        stage('Push to Registry') {
            when {
                expression { return env.REGISTRY_CREDENTIALS != '' }
            }
            steps {
                script {
                    docker.withRegistry(REGISTRY_URL, REGISTRY_CREDENTIALS) {
                        dockerImage.push("${env.BUILD_NUMBER}")
                        dockerImage.push("latest")
                    }
                }
            }
        }
    }

