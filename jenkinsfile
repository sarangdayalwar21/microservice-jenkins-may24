<<<<<<< HEAD
        // Stage 3: Docker Build
        stage('Docker Build') {
            steps {
                dir('wishlist-microservice-python') {
                    // Build the Docker image for the Python project
                    sh 'docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .'
                }
            }
        }

        // Stage 4: Docker Push
        stage('Docker Push') {
            steps {
                // Login to Docker Hub using Jenkins credentials
                withCredentials([string(credentialsId: 'verma00', variable: 'DOCKER_PASSWORD')]) {
                    // Docker login
                    sh 'docker login -u verma00 -p ${DOCKER_PASSWORD}'
                    
                    // Tag the Docker image
                    sh 'docker tag ${IMAGE_NAME}:${IMAGE_TAG} verma00/devops1:${IMAGE_TAG}'
                    
                    // Push the image to Docker Hub
                    sh 'docker push verma00/devops1:${IMAGE_TAG}'
                    
                    // Logout from Docker Hub
                    sh 'docker logout'
                }
            }
        }

    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}

